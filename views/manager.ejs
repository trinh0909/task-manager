                <a class="nav-item nav-link" id ='2' href="/users/manager?page=2&loai=<%= loai %>">đã duyệt</a>   
                <a class="nav-item nav-link" id ='3'  href="/users/manager?page=3&loai=<%= loai %>">reject</a>
